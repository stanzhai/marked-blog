doctype html
html
  head
    title #{(title || '') + ' - ' + site_name}
    meta(name='author', content='#{author}')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='stylesheet', href='/css/style.css')
    link(href="/images/favicon.png", rel="icon")
    block header
  body
    header#header.inner
      div.alignleft
        h1
          a(href='/')= site_name
        h2
          a(href='/')= sub_title

      nav#main-nav.alignright
        ul
          li
            a(href='/') Archives
          li
            a(href='/about') About
        div.clearfix
      div.clearfix

    div#content.inner
      div#main-col.alignleft
        div#wrapper
          block content

      aside#sidebar.alignright
        div.search
          form#search.pull-right(method='get', action='/', target='_blank')
            input(type="search", name='search', results="0", placeholder="搜索")

      div.clearfix

    footer#footer.inner
      div.alignleft
      = '(C) ' + author

    script(src="/bower/jquery/dist/jquery.min.js")
    block footer
