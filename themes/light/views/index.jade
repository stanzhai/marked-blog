extends layout

block content
  - each post in posts
    article.post
      div.post-content
        header
          div.icon
          time(datetime='#{post.create_date}')
            a(href='/#{post.url}', target='_blank')= post.create
          h1.title
            a(href='/#{post.url}', target='_blank')= post.title

        div.entry !{post.abstract_html}

        footer
          div.alignleft
            a.more-link(href='/#{post.url}', target='_blank') 阅读全文
          div.clearfix
