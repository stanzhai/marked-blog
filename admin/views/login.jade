doctype 5
html
  head
    title 系统登录
    link(rel='stylesheet', href='/admin/css/login.css')
  body
    div#content
      p#logo
        img(src='/admin/images/marked-blog.png')
      form(method='post')
        span.input-wrap
          input#user-name(name='user', placeholder="用户名")
        span.input-wrap
          input#password(name='password', type='password', placeholder="密码")
        input#login(type='submit', value='登  录')
