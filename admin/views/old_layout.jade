doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='#{admin_url}/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='#{admin_url}/bootstrap/css/bootstrap-responsive.css')
    link(rel='stylesheet', href='#{admin_url}/css/style.css')
    link(rel='stylesheet', href='#{admin_url}/css/messenger.css')
    link(rel='stylesheet', href='#{admin_url}/css/messenger-theme-future.css')
    script(type="text/javascript", src="#{admin_url}/js/jquery-1.10.1.min.js")
    script(type="text/javascript", src="#{admin_url}/js/messenger.min.js")
    script(type="text/javascript", src="#{admin_url}/bootstrap/js/bootstrap.min.js")
    block header
  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container-fluid
          button.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href="#{admin_url}/") Marked Blog
          div.nav-collapse.collapse
            p.navbar-text.pull-right
              a.navbar-link(href="#") User
            ul.nav
              li.active
                a(href="#") Posts
              li
                a(href="#") About

    div.container-fluid
      div.row-fluid
        div.span12
          block content
      hr
      footer
        p &copy; Marked-blog 2013

  script(type="text/javascript")
    $._messengerDefaults = {
      extraClasses: 'messenger-fixed messenger-theme-future messenger-on-top'
    }
    $(document).ajaxError(function (event, xhr, ajaxSettings, thrownError) {
      $.globalMessenger().post(JSON.parse(xhr.responseText).msg);
    });
